@{
    ViewData["Title"] = "Contatos";
}
<h1>@ViewData["Title"]</h1>
<div>
    <h1>Bem vindo aos contatos.</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="" class="control-label">Nome</label>
                <input for="" class="form-control" placeholder="Coloque seu primeiro nome..."/>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Email</label>
                <input for="" class="form-control" placeholder="(✿◠‿◠)"/>
            </div>
             <div class="form-group">
                <label for="" class="control-label">Telefone</label>
                <input for="" class="form-control" placeholder="(✿◠‿◠)"/>
            </div>
             <div class="form-group">
                <label for="" class="control-label">Comentário</label>
                <textarea class="form-control" name="w3review" rows="4" cols="50" placeholder="(✿◠‿◠)"></textarea>
            </div>
            <div class="form-group">
                <input type="button" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

